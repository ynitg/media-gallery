<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- 顶部快速显示标签区域 -->
    <header class="bg-blue-600 text-white shadow-lg">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <div class="bg-blue-500 rounded-lg px-4 py-2">
                        <span class="text-white font-medium">快速显示标签</span>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-sm">
                        <i class="fas fa-user mr-1"></i>欢迎, <%= admin.username %>
                    </span>
                    <a href="/settings" class="text-white hover:text-blue-200 transition-colors">
                        <i class="fas fa-cog"></i>
                    </a>
                    <a href="/logout" class="text-white hover:text-blue-200 transition-colors">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div class="flex h-screen">
        <!-- 左侧多级菜单区域 -->
        <aside class="bg-blue-600 text-white w-64 shadow-lg">
            <nav class="mt-4">
                <div class="px-4 space-y-1">
                    <!-- 一级菜单 - 资源管理 -->
                    <div class="menu-group">
                        <div class="menu-item-level1 flex items-center justify-between px-4 py-3 rounded-lg cursor-pointer hover:bg-blue-700 transition-colors" onclick="toggleMenu('resource')">
                            <div class="flex items-center">
                                <i class="fas fa-plus mr-3"></i>
                                <span>资源管理</span>
                            </div>
                            <i class="fas fa-chevron-down transition-transform" id="resource-arrow"></i>
                        </div>
                        
                        <!-- 二级菜单 -->
                        <div class="ml-4 space-y-1" id="resource-submenu" style="display: none;">
                            <!-- IP管理 -->
                            <div class="menu-item-level2 flex items-center justify-between px-4 py-2 rounded-lg cursor-pointer hover:bg-blue-700 transition-colors" onclick="toggleMenu('ip')">
                                <span>IP管理</span>
                                <i class="fas fa-chevron-down transition-transform" id="ip-arrow"></i>
                            </div>
                            
                            <!-- 三级菜单 -->
                            <div class="ml-4 space-y-1" id="ip-submenu" style="display: none;">
                                <a href="/ip-management" class="menu-item-level3 block px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                                    公网IP管理
                                </a>
                                <a href="/ip-management" class="menu-item-level3 block px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                                    内网IP管理
                                </a>
                            </div>
                            
                            <!-- 机房管理 -->
                            <a href="/server-room" class="menu-item-level2 block px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                                机房管理
                            </a>
                            
                            <!-- 楼内线管理 -->
                            <a href="/building-lines" class="menu-item-level2 block px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                                楼内线管理
                            </a>
                        </div>
                    </div>
                    
                    <!-- 一级菜单 - 用户管理 -->
                    <div class="menu-group">
                        <div class="menu-item-level1 flex items-center justify-between px-4 py-3 rounded-lg cursor-pointer hover:bg-blue-700 transition-colors" onclick="toggleMenu('user')">
                            <span>用户管理</span>
                            <i class="fas fa-chevron-down transition-transform" id="user-arrow"></i>
                        </div>
                        
                        <!-- 二级菜单 -->
                        <div class="ml-4 space-y-1" id="user-submenu" style="display: none;">
                            <a href="/user-groups" class="menu-item-level2 block px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                                用户组管理
                            </a>
                            <a href="/users" class="menu-item-level2 block px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                                用户管理
                            </a>
                        </div>
                    </div>
                    
                    <!-- 一级菜单 - 系统设置 -->
                    <a href="/settings" class="menu-item-level1 block px-4 py-3 rounded-lg hover:bg-blue-700 transition-colors">
                        系统设置
                    </a>
                </div>
            </nav>
        </aside>

        <!-- 右侧显示区域 -->
        <main class="flex-1 bg-gray-50 overflow-y-auto">
            <div class="p-6">
                <!-- 页面标题 -->
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-900">仪表板</h1>
                    <p class="mt-2 text-gray-600">IP管理系统总览</p>
                </div>

        <!-- 统计卡片 -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="card">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-server text-blue-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">总IP记录</p>
                        <p class="text-2xl font-semibold text-gray-900" id="totalIPs">-</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-check-circle text-green-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">活跃IP</p>
                        <p class="text-2xl font-semibold text-gray-900" id="activeIPs">-</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-code-branch text-yellow-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">分割记录</p>
                        <p class="text-2xl font-semibold text-gray-900" id="splitRecords">-</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-compress-alt text-purple-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">合并记录</p>
                        <p class="text-2xl font-semibold text-gray-900" id="mergeRecords">-</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- 快速操作 -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <div class="card">
                <h3 class="text-lg font-medium text-gray-900 mb-4">
                    <i class="fas fa-bolt mr-2"></i>快速操作
                </h3>
                <div class="space-y-3">
                    <a href="/ip-management" class="block w-full btn-primary text-center">
                        <i class="fas fa-plus mr-2"></i>添加IP记录
                    </a>
                    <a href="/ip-split" class="block w-full btn-warning text-center">
                        <i class="fas fa-code-branch mr-2"></i>IP分割
                    </a>
                    <a href="/ip-merge" class="block w-full btn-success text-center">
                        <i class="fas fa-compress-alt mr-2"></i>IP合并
                    </a>
                </div>
            </div>

            <div class="card">
                <h3 class="text-lg font-medium text-gray-900 mb-4">
                    <i class="fas fa-chart-line mr-2"></i>系统状态
                </h3>
                <div class="space-y-3">
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600">API状态</span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <i class="fas fa-circle text-green-500 mr-1" style="font-size: 6px;"></i>
                            正常
                        </span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600">数据库</span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <i class="fas fa-circle text-green-500 mr-1" style="font-size: 6px;"></i>
                            连接正常
                        </span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600">最后更新</span>
                        <span class="text-sm text-gray-900" id="lastUpdate">-</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 最近活动 -->
        <div class="card">
            <h3 class="text-lg font-medium text-gray-900 mb-4">
                <i class="fas fa-history mr-2"></i>最近活动
            </h3>
            <div class="table-container">
                <table class="table">
                    <thead class="table-header">
                        <tr>
                            <th>时间</th>
                            <th>操作</th>
                            <th>IP地址</th>
                            <th>状态</th>
                        </tr>
                    </thead>
                    <tbody class="table-body" id="recentActivities">
                        <tr>
                            <td colspan="4" class="text-center text-gray-500 py-8">
                                <i class="fas fa-spinner fa-spin mr-2"></i>加载中...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <script>
        // 菜单展开/收起功能
        function toggleMenu(menuId) {
            const submenu = document.getElementById(menuId + '-submenu');
            const arrow = document.getElementById(menuId + '-arrow');
            
            if (submenu.style.display === 'none') {
                submenu.style.display = 'block';
                arrow.style.transform = 'rotate(180deg)';
            } else {
                submenu.style.display = 'none';
                arrow.style.transform = 'rotate(0deg)';
            }
        }

        // 加载仪表板数据
        async function loadDashboardData() {
            try {
                // 加载统计信息
                const response = await fetch('/api/ips?limit=1000');
                const data = await response.json();
                
                if (data.success) {
                    const ips = data.data;
                    const activeIPs = ips.filter(ip => ip.status === 'active');
                    
                    document.getElementById('totalIPs').textContent = ips.length;
                    document.getElementById('activeIPs').textContent = activeIPs.length;
                    
                    // 模拟分割和合并记录数量
                    document.getElementById('splitRecords').textContent = Math.floor(ips.length * 0.3);
                    document.getElementById('mergeRecords').textContent = Math.floor(ips.length * 0.2);
                    
                    // 更新最后更新时间
                    document.getElementById('lastUpdate').textContent = new Date().toLocaleString('zh-CN');
                    
                    // 显示最近活动
                    displayRecentActivities(ips.slice(0, 10));
                }
            } catch (error) {
                console.error('加载仪表板数据失败:', error);
            }
        }

        function displayRecentActivities(activities) {
            const tbody = document.getElementById('recentActivities');
            
            if (activities.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="4" class="text-center text-gray-500 py-8">
                            <i class="fas fa-inbox mr-2"></i>暂无活动记录
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = activities.map(activity => `
                <tr>
                    <td>${new Date(activity.created_at).toLocaleString('zh-CN')}</td>
                    <td>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            <i class="fas fa-plus mr-1"></i>创建
                        </span>
                    </td>
                    <td>${activity.ip_address}/${activity.subnet_mask}</td>
                    <td>
                        <span class="${activity.status === 'active' ? 'status-active' : 'status-inactive'}">
                            ${activity.status === 'active' ? '活跃' : '非活跃'}
                        </span>
                    </td>
                </tr>
            `).join('');
        }

        // 页面加载完成后获取数据
        document.addEventListener('DOMContentLoaded', loadDashboardData);
    </script>
</body>
</html>

