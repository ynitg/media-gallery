<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <!-- 导航栏 -->
    <nav class="navbar">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-network-wired text-blue-600 text-2xl"></i>
                        <span class="ml-2 text-xl font-bold text-gray-900">IP管理系统</span>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/dashboard" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-home"></i> 仪表板
                    </a>
                    <a href="/ip-management" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-server"></i> IP管理
                    </a>
                    <span class="text-sm text-gray-700">
                        <i class="fas fa-user mr-1"></i><%= admin.username %>
                    </span>
                    <a href="/logout" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- 页面标题 -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">IP分割</h1>
            <p class="mt-2 text-gray-600">将IP段分割成多个子网</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- 分割配置 -->
            <div class="card">
                <h3 class="text-lg font-medium text-gray-900 mb-4">
                    <i class="fas fa-code-branch mr-2"></i>分割配置
                </h3>
                
                <form id="splitForm" class="space-y-4">
                    <div>
                        <label class="form-label">选择要分割的IP段 *</label>
                        <select id="parentIP" name="parent_ip_id" class="form-input" required>
                            <option value="">请选择IP段...</option>
                        </select>
                    </div>
                    
                    <div>
                        <label class="form-label">分割数量 *</label>
                        <input type="number" id="splitCount" name="split_count" class="form-input" 
                               min="2" max="256" placeholder="输入分割数量" required>
                        <p class="text-sm text-gray-500 mt-1">支持2-256个子网分割</p>
                    </div>
                    
                    <div>
                        <button type="submit" class="btn-warning w-full">
                            <i class="fas fa-code-branch mr-2"></i>执行分割
                        </button>
                    </div>
                </form>
            </div>

            <!-- 分割预览 -->
            <div class="card">
                <h3 class="text-lg font-medium text-gray-900 mb-4">
                    <i class="fas fa-eye mr-2"></i>分割预览
                </h3>
                
                <div id="splitPreview" class="space-y-3">
                    <div class="text-center text-gray-500 py-8">
                        <i class="fas fa-info-circle mr-2"></i>
                        请选择IP段和分割数量以查看预览
                    </div>
                </div>
            </div>
        </div>

        <!-- 分割结果 -->
        <div class="card mt-8" id="splitResult" style="display: none;">
            <h3 class="text-lg font-medium text-gray-900 mb-4">
                <i class="fas fa-check-circle mr-2"></i>分割结果
            </h3>
            
            <div class="table-container">
                <table class="table">
                    <thead class="table-header">
                        <tr>
                            <th>序号</th>
                            <th>子网地址</th>
                            <th>CIDR</th>
                            <th>网络地址</th>
                            <th>广播地址</th>
                            <th>可用主机数</th>
                        </tr>
                    </thead>
                    <tbody class="table-body" id="splitResultBody">
                        <!-- 结果将通过JavaScript动态生成 -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- 分割历史 -->
        <div class="card mt-8">
            <h3 class="text-lg font-medium text-gray-900 mb-4">
                <i class="fas fa-history mr-2"></i>分割历史
            </h3>
            
            <div class="table-container">
                <table class="table">
                    <thead class="table-header">
                        <tr>
                            <th>时间</th>
                            <th>父IP段</th>
                            <th>分割数量</th>
                            <th>操作者</th>
                            <th>状态</th>
                        </tr>
                    </thead>
                    <tbody class="table-body" id="splitHistoryBody">
                        <tr>
                            <td colspan="5" class="text-center text-gray-500 py-8">
                                <i class="fas fa-spinner fa-spin mr-2"></i>加载中...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        let availableIPs = [];

        // 加载可用的IP段
        async function loadAvailableIPs() {
            try {
                const response = await fetch('/api/ips?limit=1000');
                const data = await response.json();
                
                if (data.success) {
                    availableIPs = data.data.filter(ip => ip.status === 'active');
                    populateIPSelect();
                } else {
                    showAlert('加载IP段失败: ' + data.message, 'error');
                }
            } catch (error) {
                console.error('加载IP段失败:', error);
                showAlert('加载IP段失败', 'error');
            }
        }

        // 填充IP选择框
        function populateIPSelect() {
            const select = document.getElementById('parentIP');
            select.innerHTML = '<option value="">请选择IP段...</option>';
            
            availableIPs.forEach(ip => {
                const option = document.createElement('option');
                option.value = ip.id;
                option.textContent = `${ip.ip_address}/${ip.subnet_mask} (${ip.description || '无描述'})`;
                select.appendChild(option);
            });
        }

        // 生成分割预览
        function generateSplitPreview() {
            const parentIPId = document.getElementById('parentIP').value;
            const splitCount = parseInt(document.getElementById('splitCount').value);
            
            if (!parentIPId || !splitCount) {
                document.getElementById('splitPreview').innerHTML = `
                    <div class="text-center text-gray-500 py-8">
                        <i class="fas fa-info-circle mr-2"></i>
                        请选择IP段和分割数量以查看预览
                    </div>
                `;
                return;
            }
            
            const parentIP = availableIPs.find(ip => ip.id == parentIPId);
            if (!parentIP) return;
            
            try {
                // 模拟分割计算
                const cidr = `${parentIP.ip_address}/${parentIP.subnet_mask}`;
                const requiredBits = Math.ceil(Math.log2(splitCount));
                const newPrefix = parseInt(parentIP.subnet_mask) + requiredBits;
                
                if (newPrefix > 32) {
                    document.getElementById('splitPreview').innerHTML = `
                        <div class="text-center text-red-500 py-8">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            分割数量过大，无法分割
                        </div>
                    `;
                    return;
                }
                
                const subnetSize = Math.pow(2, 32 - newPrefix);
                const previewHTML = `
                    <div class="space-y-3">
                        <div class="bg-blue-50 p-4 rounded-lg">
                            <h4 class="font-medium text-blue-900 mb-2">父IP段信息</h4>
                            <p class="text-sm text-blue-800">${parentIP.ip_address}/${parentIP.subnet_mask}</p>
                            <p class="text-sm text-blue-800">网络地址: ${parentIP.network_address}</p>
                            <p class="text-sm text-blue-800">广播地址: ${parentIP.broadcast_address}</p>
                        </div>
                        
                        <div class="bg-green-50 p-4 rounded-lg">
                            <h4 class="font-medium text-green-900 mb-2">分割信息</h4>
                            <p class="text-sm text-green-800">分割数量: ${splitCount}</p>
                            <p class="text-sm text-green-800">新子网掩码: /${newPrefix}</p>
                            <p class="text-sm text-green-800">每个子网大小: ${subnetSize} 个地址</p>
                        </div>
                        
                        <div class="bg-yellow-50 p-4 rounded-lg">
                            <h4 class="font-medium text-yellow-900 mb-2">注意事项</h4>
                            <p class="text-sm text-yellow-800">• 分割后将创建 ${splitCount} 个新的子网</p>
                            <p class="text-sm text-yellow-800">• 原IP段状态将保持不变</p>
                            <p class="text-sm text-yellow-800">• 分割操作不可逆</p>
                        </div>
                    </div>
                `;
                
                document.getElementById('splitPreview').innerHTML = previewHTML;
            } catch (error) {
                document.getElementById('splitPreview').innerHTML = `
                    <div class="text-center text-red-500 py-8">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        预览生成失败: ${error.message}
                    </div>
                `;
            }
        }

        // 执行分割
        async function executeSplit(formData) {
            try {
                const response = await fetch('/api/ips/split', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert('IP段分割成功', 'success');
                    displaySplitResult(data.data);
                    loadSplitHistory();
                    loadAvailableIPs(); // 重新加载可用IP段
                } else {
                    showAlert('分割失败: ' + data.message, 'error');
                }
            } catch (error) {
                console.error('分割失败:', error);
                showAlert('分割失败，请稍后重试', 'error');
            }
        }

        // 显示分割结果
        function displaySplitResult(result) {
            const resultDiv = document.getElementById('splitResult');
            const tbody = document.getElementById('splitResultBody');
            
            const html = result.subnets.map((subnet, index) => `
                <tr>
                    <td>${index + 1}</td>
                    <td>${subnet.network}</td>
                    <td>${subnet.cidr}</td>
                    <td>${subnet.network}</td>
                    <td>${subnet.broadcast}</td>
                    <td>${subnet.size - 2}</td>
                </tr>
            `).join('');
            
            tbody.innerHTML = html;
            resultDiv.style.display = 'block';
        }

        // 加载分割历史
        async function loadSplitHistory() {
            try {
                // 这里应该调用实际的历史记录API
                // 暂时显示模拟数据
                const tbody = document.getElementById('splitHistoryBody');
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center text-gray-500 py-8">
                            <i class="fas fa-inbox mr-2"></i>暂无分割历史
                        </td>
                    </tr>
                `;
            } catch (error) {
                console.error('加载分割历史失败:', error);
            }
        }

        // 显示提示信息
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 ${
                type === 'success' ? 'bg-green-100 text-green-800' :
                type === 'error' ? 'bg-red-100 text-red-800' :
                'bg-blue-100 text-blue-800'
            }`;
            alertDiv.innerHTML = `
                <div class="flex items-center">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'} mr-2"></i>
                    ${message}
                </div>
            `;
            
            document.body.appendChild(alertDiv);
            
            setTimeout(() => {
                alertDiv.remove();
            }, 3000);
        }

        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', function() {
            loadAvailableIPs();
            loadSplitHistory();
            
            // 绑定事件
            document.getElementById('parentIP').addEventListener('change', generateSplitPreview);
            document.getElementById('splitCount').addEventListener('input', generateSplitPreview);
            
            // 表单提交
            document.getElementById('splitForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const data = Object.fromEntries(formData);
                
                if (!data.parent_ip_id || !data.split_count) {
                    showAlert('请填写所有必填字段', 'error');
                    return;
                }
                
                if (!confirm('确定要执行IP分割操作吗？此操作不可逆。')) {
                    return;
                }
                
                executeSplit(data);
            });
        });
    </script>
</body>
</html>




